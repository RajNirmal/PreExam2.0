<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".HomePage" >
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_weight="1">
        <Button
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/n1"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:drawableLeft="@drawable/bsl1"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8"/>

        <Button
            android:gravity="fill_vertical"
            android:layout_gravity="center"
            android:id="@+id/n2"
            android:background="#BBDEFB"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:text="Vijay"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:layout_weight="0.2"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_weight="1">
        <Button
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/e1"
            android:background="#ffffff"
            android:drawableLeft="@drawable/bsl2"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8"/>

        <Button
            android:gravity="fill_vertical"
            android:layout_gravity="center"
            android:id="@+id/e2"
            android:background="#BBDEFB"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="vijayperumalmca@gmail.com"
            android:layout_weight="0.2"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_weight="1">
        <Button
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/i1"
            android:background="#ffffff"
            android:drawableLeft="@drawable/bsl3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:layout_weight="0.8"/>
        <Button
            android:gravity="fill_vertical"
            android:layout_gravity="center"
            android:id="@+id/i2"
            android:background="#BBDEFB"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Arunai Engineering collage"
            android:layout_weight="0.2"/>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_weight="1">
        <Button
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/c1"
            android:background="#ffffff"
            android:drawableLeft="@drawable/bsl4"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8"/>

        <Button
            android:gravity="fill_vertical"
            android:layout_gravity="center"
            android:id="@+id/c2"
            android:background="#BBDEFB"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="India"
            android:layout_weight="0.2"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_weight="1">
        <Button
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/p1"
            android:background="#ffffff"
            android:drawableLeft="@drawable/bsl5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:layout_weight="0.8"/>

        <Button
            android:gravity="fill_vertical"
            android:layout_gravity="center"
            android:id="@+id/p2"
            android:background="#BBDEFB"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="606753"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:layout_weight="0.2"/>
    </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
        <Button
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/quiz"
            android:background="#0D47A1"
            android:textColor="#ffffff"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="150dp"
            android:textSize="20dp"
            android:text="share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
  </LinearLayout>

</LinearLayout>