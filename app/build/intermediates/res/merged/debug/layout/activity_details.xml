<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gr"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imageviewdetailspage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/kl"
        app:layout_widthPercent="35%"
        app:layout_heightPercent="8%"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:id="@+id/inst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="20dp"
        android:drawingCacheQuality="high"
        android:textColorHint="#ffffff"
        android:drawableLeft="@drawable/ins1"
        android:hint="Institution Name"
        android:inputType="text"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:layout_below="@+id/imageviewdetailspage"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="5%"
        app:layout_heightPercent="15%"
        app:layout_widthPercent="85%"/>
    <EditText
        android:id="@+id/res"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:drawingCacheQuality="high"
        android:textColorHint="#ffffff"
        android:drawableLeft="@drawable/res1"
        android:hint="Residential Country"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:editable="false"
        android:focusable="false"
        android:clickable="true"
        android:layout_below="@+id/inst"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="5%"
        app:layout_heightPercent="15%"
        app:layout_widthPercent="85%"/>

    <EditText
        android:id="@+id/pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:drawingCacheQuality="high"
        android:textColorHint="#ffffff"
        android:drawableLeft="@drawable/pin1"
        android:hint="Pin Code"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:layout_below="@+id/res"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="5%"
        app:layout_heightPercent="15%"
        app:layout_widthPercent="85%"/>
