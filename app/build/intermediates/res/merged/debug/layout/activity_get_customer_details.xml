
<android.support.percent.PercentRelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFD8DC"
    tools:context=".MainActivity" >

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="15%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%">

    <EditText
        android:id="@+id/ad1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lname"
        android:background="@drawable/ed"
        android:drawableLeft="@drawable/address"
        android:drawablePadding="20dp"
        app:layout_heightPercent="8%"
        android:textColorHint="@color/text_secondary"
        android:hint="Address 1"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColor="@color/icons"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/ad2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ad1"
        android:background="@drawable/ed"
        android:drawableLeft="@drawable/address"
        android:drawablePadding="20dp"
        android:textColorHint="@color/text_secondary"
        android:hint="Address 2"
        android:inputType="text"
        app:layout_heightPercent="8%"
        android:paddingLeft="10dp"
        android:textColor="@color/icons"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ad2"
        android:background="@drawable/ed"
        android:drawableLeft="@drawable/city"
        android:drawablePadding="20dp"
        android:textColorHint="@color/text_secondary"
        android:hint="City"
        app:layout_heightPercent="8%"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColor="@color/icons"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/city"
        android:background="@drawable/ed"
        android:textColorHint="@color/text_secondary"
        android:hint="State"
        app:layout_heightPercent="8%"
        android:drawableLeft="@drawable/state"
        android:drawablePadding="20dp"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/icons"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/state"
        android:textColorHint="@color/text_secondary"
        android:hint="Country"
        app:layout_heightPercent="8%"
        android:drawableLeft="@drawable/country"
        android:drawablePadding="20dp"
        android:background="@drawable/ed"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColor="@color/icons"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/country"
        android:textColorHint="@color/text_secondary"
        android:hint="Pin"
        app:layout_heightPercent="8%"
        android:drawableLeft="@drawable/pin"
        android:drawablePadding="20dp"
        android:background="@drawable/ed"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:textColor="@color/icons"
        android:textSize="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pin"
        android:text=""
        android:id="@+id/testingSP"
        android:textColor="@color/icons"/>
</android.support.percent.PercentRelativeLayout>

    <Button
        android:id="@+id/submit_customer_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r1"
        android:elevation="10dp"
        app:layout_marginTopPercent="5%"
        android:background="@color/colorAccent"
        android:textColor="#ffffff"
        app:layout_marginBottomPercent="5%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        app:layout_heightPercent="6%"
        android:textSize="16dp"
        android:textAlignment="center"
        android:text="Submit" />
    <TextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already Member!Login"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:padding="20dp"
        android:background="#4FC3F7"
        android:fontFamily="sans-serif"
        android:textSize="14sp"
        android:layout_alignParentBottom="true" />

</android.support.percent.PercentRelativeLayout>
