<android.support.percent.PercentRelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFD8DC"
    tools:context=".MainActivity" >
    <android.support.percent.PercentRelativeLayout
        android:id="@+id/r1"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/signup"
        app:layout_marginTopPercent="15%"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/uac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#000000"
        android:hint="Ac No(Auto Generate)"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:drawablePadding="20dp"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        app:layout_heightPercent="8%"
        android:background="@drawable/ed"
        android:textColor="@color/icons"
        android:textSize="14dp"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/umail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        android:drawablePadding="20dp"
        android:drawableLeft="@mipmap/email"
        android:layout_below="@+id/uac"
        app:layout_heightPercent="8%"
        android:background="@drawable/ed"
        android:textColorHint="@color/text_secondary"
        android:hint="User Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:textColor="@color/icons"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ed"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        android:drawablePadding="20dp"
        android:layout_below="@+id/umail"
        android:drawableLeft="@drawable/name"
        app:layout_heightPercent="8%"
        android:textColorHint="@color/text_secondary"
        android:hint="Name"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColor="@color/icons"
        android:textSize="14dp" />
    <EditText
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        android:layout_below="@+id/name"
        app:layout_heightPercent="8%"
        android:drawablePadding="20dp"
        android:textColorHint="@color/text_secondary"
        android:background="@drawable/ed"
        android:hint="Password"
        android:drawableLeft="@drawable/pswd"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColor="@color/icons"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/Q1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pass"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        android:drawablePadding="20dp"
        app:layout_heightPercent="8%"
        android:drawableLeft="@drawable/ques"
        android:background="@drawable/ed"
        android:textColorHint="@color/text_secondary"
        android:hint="Secret Ques1"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColor="@color/icons"
        android:textSize="14dp" />
    <EditText
        android:id="@+id/Qa1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Q1"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        android:drawablePadding="20dp"
        android:drawableLeft="@drawable/ans"
        android:background="@drawable/ed"
        app:layout_heightPercent="8%"
        android:textColorHint="@color/text_secondary"
        android:hint="Secret QAnswer1"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColor="@color/icons"
        android:textSize="14dp" />
    <EditText
        android:id="@+id/Q2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Qa1"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        app:layout_heightPercent="8%"
        android:drawablePadding="20dp"
        android:drawableLeft="@drawable/ques"
        android:textColorHint="@color/text_secondary"
        android:background="@drawable/ed"
        android:hint="Secret Ques2"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColor="@color/icons"
        android:textSize="14dp" />
    <EditText
        android:id="@+id/Qa2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Q2"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        android:drawablePadding="20dp"
        android:drawableLeft="@drawable/ans"
        app:layout_heightPercent="8%"
        android:background="@drawable/ed"
        android:textColorHint="@color/text_secondary"
        android:hint="Secret QAnswer2"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColor="@color/icons"
        android:textSize="14dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/error"
        android:drawablePadding="20dp"
        android:background="@drawable/ed"
        android:layout_below="@id/Qa2"/>
    </android.support.percent.PercentRelativeLayout>
    <Button
        android:id="@+id/submit_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:layout_below="@+id/r1"
        android:layout_centerHorizontal="true"
        app:layout_heightPercent="6%"
        app:layout_marginTopPercent="5%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        android:background="@color/colorAccent"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:textAlignment="center"
        android:text="Submit" />
    <TextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already Member!Login"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:paddingBottom="20dp"
       android:padding="20dp"
        android:background="#4FC3F7"
        android:fontFamily="sans-serif"
        android:textSize="14sp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true" />
</android.support.percent.PercentRelativeLayout>
