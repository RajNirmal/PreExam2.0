<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".PreQuiz">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_weight="1">

        <Button
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/button1"
            android:textColor="#16a085"
            android:layout_height="170dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:padding="20dp"
            android:layout_margin="0dp"
            android:drawablePadding="-20dp"
            android:fontFamily="san-serif"
            android:background="@drawable/line"
            android:drawableTop="@drawable/t1"
            android:layout_width="match_parent"
            android:text="Maths"
            android:layout_weight="0.5"
            />

        <Button
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/button2"
            android:drawableTop="@drawable/t2"
            android:layout_height="170dp"
            android:padding="20dp"
            android:background="@drawable/line"
            android:textColor="#27ae60"
            android:drawablePadding="-20dp"
            android:layout_width="match_parent"
            android:text="Physics"
            android:fontFamily="san-serif"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_weight="0.5"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="0dp"

        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/button3"
            android:drawableTop="@drawable/t3"
            android:layout_height="145dp"
            android:text="chemistry"
            android:padding="20dp"
            android:background="@drawable/line"
            android:fontFamily="san-serif"
            android:textColor="#8e44ad"
            android:drawablePadding="-20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_weight="1"/>

        <Button
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/button4"
            android:drawableTop="@drawable/t4"
            android:textColor="#2980b9"
            android:layout_height="145dp"
            android:fontFamily="san-serif"
            android:textSize="15sp"
            android:padding="20dp"
            android:textStyle="bold"
            android:drawablePadding="-20dp"
            android:background="@drawable/line"
            android:layout_width="match_parent"
            android:text="Biology"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"

        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">
        <Button
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/button5"
            android:drawableTop="@drawable/t5"
            android:layout_width="0dp"
            android:drawablePadding="-20dp"
            android:fontFamily="san-serif"
            android:layout_height="170dp"
            android:padding="20dp"
            android:text="computers"
            android:textColor="#2c3e50"
            android:background="@drawable/line"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <Button
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/button6"
            android:drawableTop="@drawable/t6"
            android:textColor="#c0392b"
            android:layout_height="170dp"
            android:fontFamily="san-serif"
            android:textSize="16sp"
            android:padding="20dp"
            android:drawablePadding="-20dp"
            android:textStyle="bold"
            android:background="@drawable/line"
            android:layout_width="0dp"
            android:text="find more"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>