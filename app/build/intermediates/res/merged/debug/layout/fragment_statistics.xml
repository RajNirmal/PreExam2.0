
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#ffffff"
    android:id="@+id/statistics_1_page">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Maths"
    android:layout_marginTop="10dp"
    android:fontFamily="san-serif"
    android:id="@+id/subject_text"
    android:textSize="25sp"
    android:layout_gravity="center"/>

    <az.plainpie.PieView
        xmlns:plainpie="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pieView"
        android:layout_marginTop="15dp"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="200dp"
        plainpie:inner_pie_padding="40"
        plainpie:percentage="75"
        plainpie:percentage_size="50"
        plainpie:inner_text_visibility="true"/>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#CFD8DC"
        android:layout_margin="20dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="2dp">
    <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical">
         <TextView
             android:layout_gravity="center"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/PerformanceRating"
             android:textSize="16sp"
             android:textColor="#212121"
             android:fontFamily="san-serif"
             android:gravity="center"
             android:text="Your Average Score is 80%"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/winner_loser"
            android:contentDescription="Winner_or_Loser" />

    </LinearLayout>
   </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_change_subject"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_subject_2"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#616161"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="2dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:src="@drawable/subject3"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_subject_3"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#616161"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="2dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:src="@drawable/subject2"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_subject_6"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#616161"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="2dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:src="@drawable/subject1"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_subject_4"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#616161"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="2dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:src="@drawable/subject5"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_subject_5"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#616161"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="2dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:src="@drawable/subject4"/>
</LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
 </android.support.v7.widget.CardView>
    </LinearLayout>
