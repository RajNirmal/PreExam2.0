<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#CFD8DC">
    <android.support.design.widget.AppBarLayout android:layout_height="wrap_content"

        android:layout_width="match_parent" android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar android:id="@+id/toolbar"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent" android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary" app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        android:text="No of Questions"
        android:layout_marginLeft="50dp"
        android:textSize="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:layout_marginTop="100dp"
        android:paddingRight="20dp"
        android:fontFamily="sans-serif"
        android:background="@drawable/text"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/button"
         />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="20"
        android:layout_toRightOf="@+id/text1"
        android:textStyle="bold"
        android:layout_marginLeft="-20dp"
        android:textSize="30dp"
        android:textColor="@color/textcolor"
        android:id="@+id/button1"
        android:layout_marginTop="75dp"
        android:background="@drawable/bgcircle1" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/text2"
        android:text="Duration(in minutes)"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/button1"
        android:textSize="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="20dp"
        android:fontFamily="sans-serif"
        android:background="@drawable/text"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/button"
         />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="20"
        android:layout_below="@+id/button1"
        android:textStyle="bold"
        android:layout_marginLeft="-20dp"
        android:textSize="30dp"
        android:textColor="@color/textcolor"
        android:id="@+id/button2"
        android:layout_marginTop="30dp"
        android:background="@drawable/bgcircle2"
        android:layout_toRightOf="@+id/text2"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/text3"
        android:layout_below="@+id/button2"
        android:text="Total Marks"
        android:textSize="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="20dp"
        android:layout_marginTop="60dp"
        android:fontFamily="sans-serif"
        android:background="@drawable/text"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/button"
        android:layout_marginLeft="50dp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="20"
        android:layout_below="@+id/button2"
        android:textStyle="bold"
        android:layout_marginLeft="-20dp"
        android:textSize="30dp"
        android:textColor="@color/textcolor"
        android:id="@+id/button3"
        android:layout_marginTop="35dp"
        android:background="@drawable/bgcircle4"
        android:layout_toRightOf="@+id/text3" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/text4"
        android:layout_below="@+id/button3"
        android:text="Right Answer"
        android:textSize="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="20dp"
        android:layout_marginTop="60dp"
        android:fontFamily="sans-serif"
        android:background="@drawable/text"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/button"
        android:layout_marginLeft="50dp"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/button3"
        android:text="1"
        android:textStyle="bold"
        android:layout_marginLeft="-20dp"
        android:textSize="30dp"
        android:textColor="@color/textcolor"
        android:id="@+id/button4"
        android:layout_marginTop="35dp"
        android:background="@drawable/bgcircle3"
        android:layout_toRightOf="@+id/text4"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Start"
        android:id="@+id/done"
        android:textColor="#ffffff"
        android:fontFamily="sans-serif"
        android:textSize="16dp"
        android:textAlignment="center"
        android:background="@color/colorAccent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />

</android.support.percent.PercentRelativeLayout>