<android.support.percent.PercentRelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gr"
    tools:context=".MainActivity" >
    <TextView
        android:id="@+id/enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Enter your mobile number"
        android:textColor="#BBDEFB"
        android:textSize="24dp"
        android:layout_below="@+id/password"
        app:layout_marginTopPercent="10%"
        app:layout_marginLeftPercent="10%"
        app:layout_marginRightPercent="10%"/>
    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="We will send you an OTP to your mobile number for"
        android:textColor="#212121"
        android:textSize="16dp"
        android:layout_below="@+id/password"
        app:layout_marginTopPercent="20%"
        app:layout_marginLeftPercent="2%"
        app:layout_marginRightPercent="2%"/>
    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="verification"
        android:textColor="#212121"
        android:textSize="16dp"
        android:layout_below="@+id/password"
        app:layout_marginTopPercent="25%"
        app:layout_marginLeftPercent="10%"
        app:layout_marginRightPercent="10%"/>
    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:textColor="#212121"
        android:textSize="16dp"
        android:layout_below="@+id/password"
        app:layout_marginTopPercent="40%"
        app:layout_marginLeftPercent="10%"
        app:layout_marginRightPercent="10%"/>
    <EditText
        android:id="@+id/mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/mail1"
        android:drawablePadding="20dp"
        android:drawingCacheQuality="high"
        android:textColorHint="#ffffff"
        app:layout_marginTopPercent="50%"
        app:layout_marginLeftPercent="10%"
        app:layout_marginRightPercent="10%"
        app:layout_widthPercent="80%"
        android:hint=""
        android:inputType="textEmailAddress"
        android:textColor="#ffffff"
        android:textSize="24dp"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="80%"
        android:background="@drawable/nexte"
        android:drawingCacheQuality="high"
        android:layout_centerHorizontal="true"
        app:layout_widthPercent="20%"
        android:id="@+id/nxt" />


</android.support.percent.PercentRelativeLayout>


