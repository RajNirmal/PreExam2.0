<android.support.percent.PercentRelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gr"
    tools:context=".MainActivity" >
    <TextView
        android:id="@+id/enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Verify your mobile number"
        android:textColor="#BBDEFB"
        android:textSize="24dp"
        android:layout_below="@+id/password"
        app:layout_marginTopPercent="10%"
        app:layout_marginLeftPercent="10%"
        app:layout_marginRightPercent="10%"/>
    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="A 6-digit OTP has been sent to your phone number"
        android:textColor="#212121"
        android:textSize="16dp"
        android:layout_below="@+id/password"
        app:layout_marginTopPercent="20%"
        app:layout_marginLeftPercent="2%"
        app:layout_marginRightPercent="2%"/>
    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="via SMS"
        android:textColor="#212121"
        android:textSize="16dp"
        android:layout_below="@+id/password"
        app:layout_marginTopPercent="25%"
        app:layout_marginLeftPercent="10%"
        app:layout_marginRightPercent="10%"/>
    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Your Number"
        android:textColor="#212121"
        android:textSize="16dp"
        app:layout_heightPercent="20%"
        app:layout_widthPercent="80%"
        android:background="#ffffff"
        android:layout_below="@+id/password"
        app:layout_marginTopPercent="40%"
        app:layout_marginLeftPercent="10%"
        app:layout_marginRightPercent="10%"/>
    <TextView
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Sit back, Relax."
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:layout_below="@+id/password"
        app:layout_marginTopPercent="65%"
        app:layout_marginLeftPercent="10%"
        app:layout_marginRightPercent="10%"/>
    <TextView
        android:id="@+id/txt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="We are verified your mobile number"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:layout_below="@+id/password"
        app:layout_marginTopPercent="70%"
        app:layout_marginLeftPercent="10%"
        app:layout_marginRightPercent="10%"/>
    <TextView
        android:id="@+id/txt6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/mob"
        android:padding="5dp"
        android:text="VERIFY MANUALLY"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:layout_below="@+id/password"
        app:layout_marginTopPercent="80%"
        app:layout_marginLeftPercent="10%"
        app:layout_marginRightPercent="10%"/>


</android.support.percent.PercentRelativeLayout>


